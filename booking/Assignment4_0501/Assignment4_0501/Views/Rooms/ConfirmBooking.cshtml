@model Assignment4_0501.Models.Room

@{
    ViewData["Title"] = "ConfirmBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";

    DateTime fromDateInput = (DateTime)TempData["fromDate"];
    DateTime toDateInput = (DateTime)TempData["toDate"];
}

<div class="d-flex p-3 bg-light rounded-3 flex-column justify-content-center align-items-center w-75">
    <h2>Booking confirmed for:</h2>
    <p class="fw-bold">Booking date:</p>
    <div class="d-flex flex-column justify-content-center align-items-center ">
        <p class="py-0 my-0">From @fromDateInput.ToString().Substring(0, 10) </p>
        <p class="pt-0 mt-0">To @toDateInput.ToString().Substring(0, 10)</p>
    </div>
    <p class="fw-bold">About the room:</p>
    <div class="d-flex flex-column justify-content-center align-items-center ">
        <p class="py-0 my-0">Room number: @Html.DisplayFor(model => model.RoomNum)</p>
        <p class="py-0 my-0">Room size: @Html.DisplayFor(model => model.RoomSize)</p>
        <p class="pt-0 mt-0">Num beds: @Html.DisplayFor(model => model.NumBeds)</p>
    </div>

    <a asp-action="Index">Return to homepage</a>
</div>

